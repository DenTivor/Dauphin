extends ./tpl/_base
include ./mixins/mixins

block content
	h2 Dauphin: duplicate and collect!

	.core-wrapper

	.management
		.segment.col-md-12
			.row.line
				.col-md-2.label 
					a.btn.btn-primary.parse-datas(href="javascript:void(0)", role="button") Parse datas 
				.input-wrapper.col-md-5
					input.form-control.parsed-datas-output(type="text") 
			.row.line
				.col-md-12
					a.btn.btn-primary.load-datas(href="javascript:void(0)", role="button") Load datas


	.hidden
		.initial-node-wrapper
			.initial-node.clearfix
				.node-elements.node-cell.col-md-8
					.col-md-6
						label.col-md-5.label.centered Your name
						.input-wrapper.col-md-7
							input.form-control.name(type="text",placeholder="Your name here",dataattr="name") 
					.col-md-6
						label.col-md-5.label.centered Your surname
						.input-wrapper.col-md-7
							input.form-control.surname(type="text",placeholder="Your surname here",dataattr="surname") 
				.node-elements.node-cell.col-md-8
					.col-md-4
						.form-group.col-md-12
							label(for="sel1")
								| Gender:
							select.form-control#sel1(dataattr="gender")
								option(value="") Select...
								option(value="male") male
								option(value="female") female
					.col-md-4
						.wrapper-el(dataattr="occupation")
							label.label Occupation
							.radio: label
								input(type="radio" value="student" name="occupation")
								| Student
							.radio: label
								input(type="radio" value="employer" name="occupation")
								| Employer
							.radio: label
								input(type="radio" value="selfemployer" name="occupation")
								| Self-employer
							.radio: label
								input(type="radio" value="homeless" name="occupation")
								| Homeless
					.col-md-4
						.wrapper-el(dataattr="marital")
							label.label Marital status
							.radio: label
								input(type="radio" value="single" name="marital")
								| Single
							.radio: label
								input(type="radio" value="married" name="marital")
								| Married
							.radio: label
								input(type="radio" value="divorced" name="marital")
								| Divorced
							.radio: label
								input(type="radio" value="widow" name="marital")
								| Widow
				.node-elements.node-cell.col-md-8 
					.col-md-4
						.form-group.col-md-12
							.wrapper-el(dataattr="hobby")
								label.label Personnel hobby
								.checkbox: label
									input(type="checkbox" value="fishing")
									| Fishin'
								.checkbox: label
									input(type="checkbox" value="hunting")
									| Huntin'
								.checkbox: label
									input(type="checkbox" value="loving")
									| ...and lovin' everyday
					.col-md-8
						.col-md-6.node-elements
							label.label Native state
							.wrapper-el.fullwidth
								select.js-example-basic-single.form-control(dataattr="nativestate")
									option(value='') Enter your state...
									optgroup(label='Alaskan/Hawaiian Time Zone')
										option(value='AK') Alaska
										option(value='HI') Hawaii
									optgroup(label='Pacific Time Zone')
										option(value='CA') California
										option(value='NV') Nevada
										option(value='OR') Oregon
										option(value='WA') Washington
									optgroup(label='Mountain Time Zone')
										option(value='AZ') Arizona
										option(value='CO') Colorado
										option(value='ID') Idaho
										option(value='MT') Montana
										option(value='NE') Nebraska
										option(value='NM') New Mexico
										option(value='ND') North Dakota
										option(value='UT') Utah
										option(value='WY') Wyoming
									optgroup(label='Central Time Zone')
										option(value='AL') Alabama
										option(value='AR') Arkansas
										option(value='IL') Illinois
										option(value='IA') Iowa
										option(value='KS') Kansas
										option(value='KY') Kentucky
										option(value='LA') Louisiana
										option(value='MN') Minnesota
										option(value='MS') Mississippi
										option(value='MO') Missouri
										option(value='OK') Oklahoma
										option(value='SD') South Dakota
										option(value='TX') Texas
										option(value='TN') Tennessee
										option(value='WI') Wisconsin
									optgroup(label='Eastern Time Zone')
										option(value='CT') Connecticut
										option(value='DE') Delaware
										option(value='FL') Florida
										option(value='GA') Georgia
										option(value='IN') Indiana
										option(value='ME') Maine
										option(value='MD') Maryland
										option(value='MA') Massachusetts
										option(value='MI') Michigan
										option(value='NH') New Hampshire
										option(value='NJ') New Jersey
										option(value='NY') New York
										option(value='NC') North Carolina
										option(value='OH') Ohio
										option(value='PA') Pennsylvania
										option(value='RI') Rhode Island
										option(value='SC') South Carolina
										option(value='VT') Vermont
										option(value='VA') Virginia
										option(value='WV') West Virginia
						.col-md-12.node-elements
							label.label Payment systems
							.wrapper-el.fullwidth
								select.js-example-basic-single.form-control(multiple="multiple",dataattr="paymentsystems")
									option(value='') Enter your state...
									option(value='2c2p') 2C2P
									option(value='alipay') Alipay
									option(value='BitPay') BitPay 
									option(value='BPAY') BPAY
									option(value='DataCash') DataCash
									option(value='CentUp') CentUp
									option(value='Elavon') Elavon
									option(value='Flooz') Flooz
									option(value='IPPayments') IP Payments
									option(value='ModusLink') ModusLink
									option(value='MultiSafepay') MultiSafepay
									option(value='Paysbuy') Paysbuy
									option(value='PlaySpan') PlaySpan
									option(value='Qiwi') Qiwi
	
							
				.node-management.node-cell
					a.btn.btn-primary.add-node.hidden(href="javascript:void(0)", role="button") Add 
					a.btn.btn-primary.delete-node(href="javascript:void(0)", role="button") Delete 
