mixin service(firstheader,secondheader, ...items)
	.col-md-4.service-wrapper
		.service
			.header 
				div.first= firstheader
				div.second= secondheader
			.items-wrapper
				each item in items
					.item= item
			.service-footer.clearfix
				a.main-btn-white.pull-right(href="#") Подробнее

mixin menu(...items)
	#menu.menu
		nav.navbar.navbar-default.navbar-static-top
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#main-menu', aria-expanded='false')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#')
						.logotype
				#main-menu.navigation.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						each item in items
							li: a.item(href="#")= item

mixin mobileservice(header, text)
	.col-sm-12.service
		h2.mobile-header= header
		.modile-items= text
